{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"sequential-thinking": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				"@modelcontextprotocol/server-sequential-thinking"
			],
			"enabled": true
		},
		"playwright": {
			"type": "local",
			"command": [
				"npx",
				"@playwright/mcp@latest",
				"--extension"
			],
			"enabled": true
		},
		"context7": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				"@upstash/context7-mcp",
				"--api-key",
				"ctx7sk-2e20a38c-b4f2-4c47-a283-17592cbbb0d9"
			],
			"enabled": false
		},
		"ref": {
			"type": "local",
			"command": [
				"npx",
				"ref-tools-mcp@latest"
			],
			"environment": {
				"REF_API_KEY": "ref-db9443a57d1de0697a0b"
			},
			"enabled": true
		}
	},
	"provider": {
		"openai": {
			"models": {
				"gpt-5": {
					"options": {
						"reasoningEffort": "high",
						"textVerbosity": "low",
						"reasoningSummary": "auto",
						"include": [
							"reasoning.encrypted_content"
						]
					}
				}
			}
		}
	}
}
