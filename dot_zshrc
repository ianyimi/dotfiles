# Auto-load Bitwarden session if available and refresh if expired
if [ -f ~/.bw-session ]; then
    source ~/.bw-session
    # Ensure it's exported for subprocesses (like chezmoi)
    if [ -n "$BW_SESSION" ]; then
        export BW_SESSION
        # Silently check if session is still valid, refresh if not
        if ! bw unlock --check --session "$BW_SESSION" &>/dev/null; then
            # Session expired - clear it
            unset BW_SESSION
            rm -f ~/.bw-session
        fi
    fi
fi

