{{- if eq .chezmoi.os "darwin" -}}
#!/bin/bash

set -e

echo "=== Installing Prerequisites (macOS) ==="

# Check and install Xcode Command Line Tools (includes git)
if ! xcode-select -p &>/dev/null; then
    echo "Installing Xcode Command Line Tools..."
    xcode-select --install
    echo "Please complete the Xcode Command Line Tools installation and re-run this script."
    exit 1
else
    echo "✓ Xcode Command Line Tools already installed"
fi

# Check and install Homebrew
if ! command -v brew &>/dev/null; then
    echo "Installing Homebrew..."
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)" </dev/tty

    # Add Homebrew to PATH for Apple Silicon Macs
    if [[ $(uname -m) == "arm64" ]]; then
        echo 'eval "$(/opt/homebrew/bin/brew shellenv)"' >> ~/.zprofile
        eval "$(/opt/homebrew/bin/brew shellenv)"
    fi
else
    echo "✓ Homebrew already installed"
fi

# Ensure git is available
if ! command -v git &>/dev/null; then
    echo "Installing git..."
    brew install git
else
    echo "✓ git already installed"
fi

echo "=== Prerequisites installation complete ==="
{{ else if eq .chezmoi.os "linux" -}}
#!/bin/bash

set -e

echo "=== Installing Prerequisites (Linux) ==="

# Update package lists
echo "Updating package lists..."
sudo apt-get update

# Install essential packages
echo "Installing essential packages..."
sudo apt-get install -y \
    git \
    curl \
    wget \
    build-essential \
    software-properties-common \
    apt-transport-https \
    ca-certificates \
    gnupg \
    lsb-release

# Ensure git is available
if ! command -v git &>/dev/null; then
    echo "Installing git..."
    sudo apt-get install -y git
else
    echo "✓ git already installed"
fi

echo "=== Prerequisites installation complete ==="
{{ end -}}
